<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:elasticsearch="http://www.pilato.fr/schema/elasticsearch"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xmlns:lang="http://www.springframework.org/schema/lang" xmlns:p="http://www.springframework.org/schema/p"
	xmlns:util="http://www.springframework.org/schema/util"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
        http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
        http://www.springframework.org/schema/context 
        http://www.springframework.org/schema/context/spring-context.xsd        
        http://www.springframework.org/schema/util 
        http://www.springframework.org/schema/util/spring-util.xsd
        http://www.pilato.fr/schema/elasticsearch 
        http://www.pilato.fr/schema/elasticsearch/elasticsearch-1.3.xsd">

	<util:map id="esproperties">
		<entry key="cluster.name" value="elasticsearch" />
	</util:map>
	<elasticsearch:client id="client" esNodes="172.16.0.26:9300" properties="esproperties" />
	
</beans>
